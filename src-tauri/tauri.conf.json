{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CleanOS-AI",
  "version": "2026.3.0",
  "identifier": "com.cleanos.ai",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/kryptobaseddev/cleanos-ai/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IERFMTkyMDQwREQ1OTdGOTQKUldTVWYxbmRRQ0FaM2tDZXA4NUQ3L0swQUNBTnlCT0tIMWw4MmNzQkNSRDd5eXJ3NEJWM2ZIUjgK"
    }
  },
  "app": {
    "windows": [
      {
        "title": "CleanOS AI - System Cleanup Assistant",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "decorations": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://api.openai.com https://generativelanguage.googleapis.com https://api.anthropic.com https://api.moonshot.cn https://github.com https://*.githubusercontent.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: asset: https://asset.localhost"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Utility",
    "shortDescription": "AI-powered system cleanup tool for Linux",
    "longDescription": "CleanOS AI uses artificial intelligence to analyze, organize, and clean system files. Supports multiple AI providers including OpenAI, Google Gemini, Anthropic Claude, and Moonshot Kimi.",
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libgtk-3-0",
          "libappindicator3-1",
          "librsvg2-2",
          "patchelf",
          "libsecret-1-0"
        ]
      }
    }
  }
}
